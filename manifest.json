{
  "manifest_version": 3,
  "name": "AutoPlay Blocker",
  "description": "Automatically stops and hides autoplaying videos and audio on all websites",
  "version": "1.0.0",
  "content_scripts": [
    {
      "js": ["main.js"],
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "https://www.youtube.com/*",
        "https://meet.google.com/*",
        "https://teams.microsoft.com/*",
        "https://zoom.us/*",
        "https://music.youtube.com/*"
      ],
      "run_at": "document_start"
    }
  ]
}
